#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatibility version to use.
export DH_COMPAT=4


export PLUGIN=helloworld

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.

	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp
	dh_testdir

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	cp -r bin/* $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/usr/lib/sourceforge/plugins/$(PLUGIN)/bin/
	cp -r include/* $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/usr/lib/sourceforge/plugins/$(PLUGIN)/include/
	# cp -r lib/* $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/usr/lib/sourceforge/plugins/$(PLUGIN)/lib/
	# cp -r cgi-bin/* $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/usr/lib/sourceforge/plugins/$(PLUGIN)/cgi-bin/
	cp -r etc/* $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/etc/sourceforge/plugins/$(PLUGIN)/
	cp -r www/* $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/usr/lib/sourceforge/www/plugins/$(PLUGIN)/
	install -m 0644 httpd.conf $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/etc/sourceforge/httpd.conf.d/50$(PLUGIN)
	# install -m 0600 httpd.secrets $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/etc/sourceforge/httpd.secrets.d/50$(PLUGIN)
	find $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/ -name CVS -type d | xargs rm -rf
	find $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/usr/lib/sourceforge/plugins/$(PLUGIN)/bin/ -type f | xargs chmod 0755
	find $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/usr/lib/sourceforge/plugins/$(PLUGIN)/include/ -type f | xargs chmod 0644
	# find $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/usr/lib/sourceforge/plugins/$(PLUGIN)/lib/ -type f | xargs chmod 0644
	# find $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/usr/lib/sourceforge/plugins/$(PLUGIN)/cgi-bin/ -type f | xargs chmod 0755
	find $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/etc/sourceforge/plugins/$(PLUGIN)/ -type f | xargs chmod 0644
	find $(CURDIR)/debian/sourceforge-plugin-$(PLUGIN)/usr/lib/sourceforge/www/plugins/$(PLUGIN)/ -type f | xargs chmod 0644


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
#	dh_installdebconf
	dh_installdocs
	dh_installexamples
	dh_installmenu
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
	dh_installcron
	dh_installman
	dh_installinfo
#	dh_undocumented
	dh_installchangelogs 
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_makeshlibs
	dh_installdeb
#	dh_perl
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
