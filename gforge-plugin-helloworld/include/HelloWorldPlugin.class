<?php

class HelloWorldPlugin extends Plugin {
	function HelloWorldPlugin () {
		$this->Plugin() ;
		$this->hooks = array () ;
		$this->hooks[] = "usermenu" ;
	}

	function CallHook ($hookname, $params) {
		global $Language, $G_SESSION ;
		if ($hookname == "usermenu") {
			echo ' | <A HREF="/plugins/helloworld/index.php?user_id=' . $G_SESSION->getId() . '">Hello world' ;
			if ($G_SESSION->usesPlugin("helloworld")) {
				echo ' [on]' ;
			} else {
				echo ' [off]' ;
			}
			echo '</A>' ;
		} elseif ($hookname == "blah") {
			// Blah
		}
	}

	function GetHooks () {
		// echo "Entered HelloWorldPlugin->GetHooks" ;
		$hooks = array () ;
		$hooks [] = "usermenu" ;
		return $hooks ;
	}
}

