require_once('pre.php');

class ForumAdmin extends Error {
	var $group_id;
	var $p,$g;
	
	function ForumAdmin($gid=0) {
		global $group_id;
		$this->group_id = $group_id; 
		if ($gid) {
			$this->group_id = $group_id;
			$this->g =& group_get_object($group_id);
			$this->p =& $this->g->getPermission( session_get_user() );
		}
	}
	
	/**
