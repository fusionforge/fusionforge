						'<TR BGCOLOR="'.$this->COLOR_HTMLBOX_TITLE.'" align="center">'.
						'<TD colspan=2><SPAN class=titlebar>'.$title.'</SPAN></TD></TR>'.
						'<TR align=left>
								<TD colspan=2>';
			if ($echoout) {
					print $return;
			} else {
					return $return;
			}
	}

	function box1_middle($title,$bgcolor='') {
			if (!$bgcolor) {
					$bgcolor=$this->COLOR_HTMLBOX_BACK;
			}
			return '
								</TD>
