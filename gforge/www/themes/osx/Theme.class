	/**
	 * listTableTop() - Takes an array of titles and builds the first row of a new table.
	 *
	 * @param	   array   The array of titles
	 * @param	   array   The array of title links
	 */
	function listTableTop ($title_arr,$links_arr=false) {
		$return = '
		<!-- listTableTop -->
		<TABLE cellspacing="0" cellpadding="1" width="100%" border="0">
        <TR><TD>
		<TABLE WIDTH="100%" BORDER="0" CELLSPACING="2" CELLPADDING="0">
			<TR>';

		$count=count($title_arr);
		if ($links_arr) {
			for ($i=0; $i<$count; $i++) {
				$return .= '
				<TD align=left><a class=titlebar href="'.$links_arr[$i].'">'.$title_arr[$i].'</A></TD>';
			}
		} else {
			for ($i=0; $i<$count; $i++) {
				$return .= '
				<TD ALIGN="left">'.$title_arr[$i].'</TD>';
			}
		}
		$return .= '
		</TR>
		<TR height=1 align=left bgcolor="'. $this->COLOR_HTMLBOX_BACK .'">
			<TD colspan='.$count.' HEIGHT=1><IMG SRC="'.$this->imgroot.'clear.png" HEIGHT=1 WIDTH=1></TD>
		</TR>';
		return $return;			
	}

	function tabGenerator($TABS_DIRS,$TABS_TITLES,$nested=false,$selected=false,$sel_tab_bgcolor='WHITE',$total_width='100%') {

		$deselect_tab='BACKGROUND="'.$this->imgroot.'tabs/deselect.png"';
		$select_tab='BACKGROUND="'.$this->imgroot.'tabs/select.png"';
		$deselect_rule='BACKGROUND="'.$this->imgroot.'tabs/ruledeselect.png"';
		$select_rule='BACKGROUND="'.$this->imgroot.'tabs/ruleselect.png"';

		$count=count($TABS_DIRS);
		$width=intval((100/($count+1)));
		$space=intval($width/2);
		$return .= '

		<!-- tabGenerator -->

		<TABLE BORDER=0 CELLPADDING=0 CELLSPACING=0 WIDTH="'.$total_width.'">
		<TR>
			<TD><IMG SRC="'.$this->imgroot.'clear.png" HEIGHT='.$this->TAB_HEIGHT.' WIDTH="'.$space.'%"></TD>';
		if ($nested) {
			$inner='-inner';
		} else {
			$inner='';
		}
		for ($i=0; $i<$count; $i++) {
			$bgimg=(($selected==$i)?$select_tab:$deselect_tab);
			$cornerimg=(($selected==$i)?'select':'deselect');
			$return .= '
				<TD HEIGHT='.$this->TAB_HEIGHT.' WIDTH=5
					BACKGROUND="'.$this->imgroot.'tabs/left'.$cornerimg.'.png"></TD>
				<TD '.$bgimg.' HEIGHT='.$this->TAB_HEIGHT.' width="'.$width.'%"  ALIGN="MIDDLE">'.
				'<A class="'. (($selected==$i)?'tabsellink':'tablink') .'" HREF="'. $TABS_DIRS[$i] .'">'. $TABS_TITLES[$i] .'</A></TD>
				<TD HEIGHT='.$this->TAB_HEIGHT.' WIDTH=5
					BACKGROUND="'.$this->imgroot.'tabs/right'.$cornerimg.'.png"</TD>';
		}

		$return .= '
			<TD><IMG SRC="'.$this->imgroot.'clear.png" HEIGHT='.$this->TAB_HEIGHT.' WIDTH="'.$space.'%"></TD>
		</TR>
		<TR>
		<TD BACKGROUND="'.$this->imgroot.'tabs/ruleselect.png"  ALIGN="MIDDLE"><IMG 
			SRC="'.$this->imgroot.'clear.png" HEIGHT=8 WIDTH="'.$space.'%"></TD>';
		for ($i=0; $i<$count; $i++) {
			$bgimg=(($selected==$i)?$select_rule:$deselect_rule);
			$blendimg=(($selected==$i)?'select':'deselect');
			$return .= '
				<TD BACKGROUND="'.$this->imgroot.'tabs/leftblend'.$blendimg.'.png"><IMG 
					SRC="'.$this->imgroot . 'clear.png" HEIGHT=8 WIDTH=5></TD>
				<TD '.$bgimg.' width="'.$width.'%"  ALIGN="MIDDLE"><IMG 
					SRC="'.$this->imgroot . 'clear.png" HEIGHT=8 WIDTH=1></TD>
				<TD BACKGROUND="'.$this->imgroot.'tabs/rightblend'.$blendimg.'.png"><IMG 
					SRC="'.$this->imgroot . 'clear.png" HEIGHT=8 WIDTH=5></TD>';
		}
		
		return $return .= '
		<TD BACKGROUND="'.$this->imgroot.'tabs/ruleselect.png"  ALIGN="MIDDLE"><IMG 
			SRC="'.$this->imgroot.'clear.png" HEIGHT=8 WIDTH="'.$space.'%"></TD>
		</TR>
		<TR><TD HEIGHT=10>&nbsp;</TD><TR>
		</TABLE> 
		<!-- end tabGenerator -->';
	}

	/**
	 * multiTableRow() - create a mutlilevel row in a table
	 *
	 * @param	string	the row attributes
	 * @param	array	the array of cell data, each element is an array, 
	 *                  	the first item being the text, 
	 *                      the subsequent items are attributes
	 * @param	boolean is this row part of the title ?
	 *
	 */
	 function multiTableRow($row_attr, $cell_data, $istitle) {
		$return= '
		<!-- multiTableRow -->
		<tr '.$row_attr;
		if ( $istitle ) {
			$return .=' align="middle" ';
		}
		$return .= '>';
		for ( $c = 0; $c < count($cell_data); $c++ ) {
			$return .='<td ';
			for ( $a=1; $a < count($cell_data[$c]); $a++) {
				$return .= $cell_data[$c][$a].' ';
			}
			$return .= '>';
			if ( $istitle ) {
				$return .='<span class=titlebar>';
			}
			$return .= $cell_data[$c][0];
			if ( $istitle ) {
				$return .='</span>';
			}
			$return .= '</td>';
		
		}
		$return .= '</tr>
		<!-- end multiTableRow -->
		';
		
		return $return;
	 }

