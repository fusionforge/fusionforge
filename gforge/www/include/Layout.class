	function Layout() {
		GLOBAL $bgpri;
		// Constructor for parent class...
		$this->Error();

		/*
		Set up the priority color array one time only
		*/
		$bgpri[1] = '#dadada';
		$bgpri[2] = '#dad0d0';
		$bgpri[3] = '#dacaca';
		$bgpri[4] = '#dac0c0';
		$bgpri[5] = '#dababa';
