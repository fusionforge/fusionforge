class Stats extends Error {

	/**
	 *	Stats - Stats object constructor
	 */
	function Stats() {
		$this->Error();
		return true;
	}

	/**
	 * Returns a resultset consisting of the month, day, total_users, and sessions
	 * from the stats_site table
	 */
	function getSiteStats() {
		$res = db_query("select month, day, total_users, sessions from stats_site");
		if (!$res) {
			$this->setError('Unable to get stats: '.db_error());
			return false;
		}
		return $res;
	}
}
