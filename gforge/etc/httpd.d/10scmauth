<Directory {usr_share_gforge}/scm>
  Options Indexes FollowSymlinks
  AllowOverride All
  order allow,deny
  allow from all
  php_admin_value include_path "{sys_custom_path}:/etc/gforge:{usr_share_gforge}:{usr_share_gforge}/www/include:."
  php_admin_value default_charset "UTF-8"
</Directory>

