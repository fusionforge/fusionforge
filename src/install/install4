install4(){
	if [ -f "/etc/gforge/local.inc" ]
	then
		PATH=/opt/gforge/utils/:$PATH migrate-to-ini-files.sh
	fi
	
	PATH=/opt/gforge/utils/:$PATH manage-apache-config.sh install
	
	ls /etc/gforge/httpd.conf.d/*.generated | while read i
	do
		mv $i ${i%%.generated}
	done
}
