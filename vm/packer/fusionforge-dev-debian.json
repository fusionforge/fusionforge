{
	"provisioners": [
		{
			"type": "file",
			"source": "file/Desktop",
			"destination": "/root/"
		},
		{
			"type": "file",
			"source": "file/bashrc-deb",
			"destination": "/root/.bashrc"
		},
		{
			"type": "shell",
			"scripts": [
				"scripts/base-debian.sh",
				"scripts/vagrant.sh",
				"scripts/virtualbox-debian.sh",
				"scripts/fusionforge-source.sh",
				"scripts/cleanup-debian.sh",
				"scripts/zerodisk.sh"
			]
		}
	],
	"builders": [
		{
			"type": "virtualbox-iso",
			"boot_command": [
				"<esc><wait>",
				"auto ",
				"url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
				"netcfg/get_hostname=forge ",
				"netcfg/get_domain=internal ",
				"<enter>"
			],
			"disk_size": 7168,
			"guest_os_type": "Debian_64",
			"http_directory": "http",
			"iso_url": "http://cdimage.debian.org/cdimage/jessie_di_rc1/amd64/iso-cd/debian-jessie-DI-rc1-amd64-netinst.iso",
			"iso_checksum": "734f93daa163924125e48594cf3b4d97cd582a6591db648eb62c6597b87855d603202daca6f8906464b0e13e509687c732d941d5dfac8081f564df980bb16a31",
			"iso_checksum_type": "sha512",
			"ssh_username": "root",
			"ssh_password": "vagrant",
			"shutdown_command": "poweroff",
			"guest_additions_mode": "disable",
			"virtualbox_version_file": ".vbox_version",
			"vboxmanage": [
				[
					"modifyvm",
					"{{.Name}}",
					"--memory",
					"512"
				],
				[
					"modifyvm",
					"{{.Name}}",
					"--cpus",
					"1"
				]
			],
			"vm_name": "fusionforge-dev-debian8"
		},
		{
			"type": "qemu",
			"iso_url": "http://cdimage.debian.org/cdimage/jessie_di_rc1/amd64/iso-cd/debian-jessie-DI-rc1-amd64-netinst.iso",
			"iso_checksum": "734f93daa163924125e48594cf3b4d97cd582a6591db648eb62c6597b87855d603202daca6f8906464b0e13e509687c732d941d5dfac8081f564df980bb16a31",
			"iso_checksum_type": "sha512",
			"shutdown_command": "poweroff",
			"disk_size": 7168,
			"format": "qcow2",
			"headless": false,
			"accelerator": "kvm",
			"http_directory": "http",
			"ssh_username": "root",
			"ssh_password": "vagrant",
			"vm_name": "fusionforge-dev-debian8",
			"boot_command": [
				"<esc><wait>",
				"auto ",
				"url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
				"netcfg/get_hostname=forge ",
				"netcfg/get_domain=internal ",
				"debian-installer/exit/poweroff=true",
				"<enter>"
			]
		}
	],
	"post-processors": [
		{
			"type": "vagrant",
			"output": "fusionforge-dev-debian8.box"
		}
	]
}
